<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.andreiarodrigues.myinstafeed.view.UserStatsFragment">

    <TextView
        android:id="@+id/tv_user_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/user_welcome_text_margin_top"
        android:gravity="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/tv_user_sign_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_user_welcome"
        android:layout_marginTop="@dimen/user_sign_out_margin_top"
        android:gravity="center"
        android:text="@string/user_sing_out"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

    <ImageView
        android:id="@+id/iv_user_profile_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_user_sign_out"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/user_profile_picture_margin_right"
        android:layout_marginLeft="@dimen/user_profile_picture_margin_left"
        android:layout_marginRight="@dimen/user_profile_picture_margin_right"
        android:layout_marginStart="@dimen/user_profile_picture_margin_left"
        android:layout_marginTop="@dimen/user_profile_picture_margin_top"
        android:contentDescription="@string/user_picture"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_user_profile_picture"
        android:layout_toEndOf="@id/iv_user_profile_picture"
        android:layout_toRightOf="@id/iv_user_profile_picture"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_user_posts_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_user_following_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_user_followers_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />

    </LinearLayout>

</RelativeLayout>
